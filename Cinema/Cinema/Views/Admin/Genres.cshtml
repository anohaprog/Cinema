@using Cinema.Models.Domain
@using Cinema.Utils
@model Cinema.Models.Domain.Genre[]

@{ 
    var genres = EnumUtil.GetValues<Genre>();
}

<div class="mb-3">
    <label>Genre</label>
    <select multiple name="Genres" id="Genres" class="form-control">
        @foreach (var genre in genres)
        {
            <option value="@genre" @(Model != null && Model.Contains(genre) ? "selected" : string.Empty)>
                @genre
            </option>
        }
    </select>
</div>